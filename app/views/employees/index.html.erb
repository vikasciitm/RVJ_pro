
<div class="card">

  <div class="card-body">
    <h1 class="text-center">Employee Data</h1>
  </div>

<a href="/employees/new" class="btn btn-outline-primary col-lg-2 m-2">New Employee</a>

<div class="col-lg-12">
  <div class="card-body">
    <table class="table">
    <thead>
      <tr>
        <th>#</th>
        <th>Name</th>
        <th>Email</th>
        <th>Salary</th>
      </tr>
    </thead>
    <tbody>
      <% @employees.each do |data|%>
      <tr>
        <td><%= data.id%></td>
        <td><%= data.name%></td>
        <td><%= data.email%></td>
        <td><%= data.salary%></td>
      </tr>
      <% end%>
    </tbody>
  </table>
  </div>
</div>

</div>